<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="eu.thedarken.diagnosis"
      android:versionCode="17" android:versionName="0.6.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>	
    
    <supports-screens android:anyDensity="true" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar" android:name="Diagnosis">
        <activity android:name=".DGtabhost"
                  android:label="@string/app_name"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="DGmain"
         	android:label="DGmain"
         	android:theme="@android:style/Theme.NoTitleBar"
         	android:configChanges="orientation"/>
        <activity android:name="DGsettings"
         	android:label="DGsettings"
			android:theme="@android:style/Theme.NoTitleBar"
         	android:configChanges="orientation"/>
         <activity android:name="DGstats" 
			android:label="Statistics" 
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="orientation"/>
         <activity android:name="DGapps" 
			android:label="Apps" 
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="orientation"/>
		<service android:name="eu.thedarken.diagnosis.DGoverlay"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="orientation"/>
         <activity android:name="DGlinebuilder" 
			android:label="Linebuilder" 
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="orientation"/>
    </application>
</manifest>