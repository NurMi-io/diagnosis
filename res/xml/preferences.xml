                        android:title="X-position" />
                    <EditTextPreference
                        android:defaultValue="60"
                        android:dialogTitle="In pixel (Default 60)"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:key="overlay.y_pos.line1"
                        android:summary="Vertical position of the overlay"
                        android:title="Y-position" />

                    <eu.thedarken.diagnosis.SeekBarPreference
                        android:defaultValue="15"
                        android:dialogMessage="Fontsize"
                        android:key="overlay.font.size.line1"
                        android:max="50"
                        android:summary="How big the letters will be"
                        android:text=""
                        android:title="Fontsize" />

                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
                        android:defaultValue="0xff00ff00"
                        android:key="overlay.color.normal.line1"
                        android:summary="Text color used for normal display"
                        android:title="Normal text color" />
                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
                        android:defaultValue="0xffffff00"
                        android:key="overlay.color.alert.line1"
                        android:summary="Text color used to highlight alerts"
                        android:title="Alert text color" />

                    <ListPreference
                        android:defaultValue="1"
                        android:entries="@array/fontNames"
                        android:entryValues="@array/fontValues"
                        android:key="overlay.font.type.line1"
                        android:summary="Choose what font type is used."
                        android:title="Font" />

                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="overlay.align.right.line1"
                        android:summary="The text will be drawn left of the setup position(i.e. turn this on an set x to your screen width)"
                        android:title="Align right" />
                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="overlay.drawbackground.line1"
                        android:summary="Draw a background behind the text to make it easier readable."
                        android:title="Draw background" />

                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
                        android:defaultValue="0x70000000"
                        android:key="overlay.color.background.line1"
                        android:summary="Color used as background"
                        android:title="Text background color" />
                </PreferenceCategory>
            </PreferenceScreen>
            <PreferenceScreen
                android:key="edit.line2"
                android:title="Edit line 3" >
                <PreferenceCategory android:title="Layout" >
                    <PreferenceScreen
                        android:key="layout.line2"
                        android:summary="Edit layout of line 3"
                        android:title="Line 3" />
                </PreferenceCategory>
                <PreferenceCategory android:title="Style and position" >
                    <EditTextPreference
                        android:defaultValue="1"
                        android:dialogTitle="In pixel (Default 1)"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:key="overlay.x_pos.line2"
                        android:summary="Horizontal position of the overlay"
                        android:title="X-position" />
                    <EditTextPreference
                        android:defaultValue="75"
                        android:dialogTitle="In pixel (Default 75)"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:key="overlay.y_pos.line2"
                        android:summary="Vertical position of the overlay"
                        android:title="Y-position" />

                    <eu.thedarken.diagnosis.SeekBarPreference
                        android:defaultValue="15"
                        android:dialogMessage="Fontsize"
                        android:key="overlay.font.size.line2"
                        android:max="50"
                        android:summary="How big the letters will be"
                        android:text=""
                        android:title="Fontsize" />

                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
                        android:defaultValue="0xff00ff00"
                        android:key="overlay.color.normal.line2"
                        android:summary="Text color used for normal display"
                        android:title="Normal text color" />
                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
                        android:defaultValue="0xffffff00"
                        android:key="overlay.color.alert.line2"
                        android:summary="Text color used to highlight alerts"
                        android:title="Alert text color" />

                    <ListPreference
                        android:defaultValue="1"
                        android:entries="@array/fontNames"
                        android:entryValues="@array/fontValues"
                        android:key="overlay.font.type.line2"
                        android:summary="Choose what font type is used."
