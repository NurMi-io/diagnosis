                        android:inputType="number"
                        android:key="overlay.x_pos.line3"
                        android:summary="Horizontal position of the overlay"
                        android:title="X-position" />
                    <EditTextPreference
                        android:defaultValue="90"
                        android:dialogTitle="In pixel (Default 90)"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:key="overlay.y_pos.line3"
                        android:summary="Vertical position of the overlay"
                        android:title="Y-position" />

                    <eu.thedarken.diagnosis.SeekBarPreference
                        android:defaultValue="15"
                        android:dialogMessage="Fontsize"
                        android:key="overlay.font.size.line3"
                        android:max="50"
                        android:summary="How big the letters will be"
                        android:text=""
                        android:title="Fontsize" />

                    <eu.thedarken.diagnosis.ColorPickerPreference
                        alphaSlider="true"
