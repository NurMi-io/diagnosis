    <PreferenceCategory android:title="Advanced settings" >
        <PreferenceScreen
            android:key="advanced"
            android:title="Advanced settings" >
            <PreferenceCategory android:title="Database" >
                <eu.thedarken.diagnosis.SeekBarPreference
                    android:defaultValue="48"
                    android:dialogMessage="Data age"
                    android:key="database.agelimit"
                    android:max="168"
                    android:summary="After what amount of time should old data be deleted?(Happens when starting service)"
                    android:text="hours"
                    android:title="Data age limit" />

                <PreferenceScreen
                    android:key="database.dropall"
                    android:summary="Drop all database tables thus reseting it."
                    android:title="Drop database" />

                <eu.thedarken.diagnosis.SeekBarPreference
                    android:defaultValue="6"
                    android:dialogMessage="Data density"
                    android:key="database.density"
                    android:max="60"
                    android:summary="Condenses multiple datasets into one. A smaller number means more accurate data, but bigger database."
                    android:text=""
                    android:title="Data density" />
                <eu.thedarken.diagnosis.SeekBarPreference
                    android:defaultValue="24"
                    android:dialogMessage="Cache size"
                    android:key="database.cachesize"
                    android:max="50"
                    android:summary="How many entries should be safed in RAM before attempting to write to memory"
                    android:text=" "
                    android:title="Cache size" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Licenses" >
        <PreferenceScreen
            android:key="License.ACRA"
            android:summary="Under APACHE v2"
            android:title="ACRA" />
